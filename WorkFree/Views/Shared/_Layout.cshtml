<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/shared.css" />
    <link rel="stylesheet" href="~/css/landing.css" />
    @RenderSection("authenticationForms", required: false)
    @RenderSection("listingsStyle", required: false)
</head>
<body>
    <header>
        <nav class="navBar">
            <div class="nav-list-left">
                <h1>WorkFree</h1>
                <form asp-controller="Listings" asp-action="Index" method="get">
                    <input type="text" name="SearchString" class="searchBar" Placeholder="Search..." value="@ViewData["CurrentFilter"]" />
                    <button type="submit">Search</button>
                </form>
            </div>
            <ul class="nav-list">
                <partial name="_LoginPartial"/>
            </ul>
        </nav>
    </header>

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>