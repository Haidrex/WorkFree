@using Microsoft.AspNetCore.Identity
@using WorkFree.Areas.Identity.Data

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-list-item">
        <a id="manage" class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Profilis</a>
    </li>
    <li class="nav-list-item"><a class="nav-link" asp-controller="Listings" asp-action="Create">Įkelti skelbimą</a></li>
    <li class="nav-list-item"><a class="nav-link" asp-controller="Listings" asp-action="Personal">Mano skelbimai</a></li>
    <li class="nav-list-item"><a class="nav-link" asp-controller="Chat" asp-action="Index">Žinutės</a></li>
    <li class="nav-list-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
              asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
        </form>
    </li>
}
else
{
    <li class="nav-list-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Prisijungti</a></li>
    <li class="nav-list-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/Register">Registracija</a></li>
}
